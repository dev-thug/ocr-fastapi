# Application Settings
PROJECT_NAME=OCR FastAPI
VERSION=1.0.0
API_V1_STR=/api/v1

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_HOSTS=["*"]

# Database Settings
DATABASE_URL=sqlite:///./ocr_app.db

# PaddleOCR 3.1 Settings
PADDLE_OCR_USE_GPU=false
PADDLE_OCR_USE_MP=true
PADDLE_OCR_TOTAL_PROC_NUM=1
PADDLE_OCR_ENABLE_MKLDNN=true
PADDLE_OCR_CPU_MATH_LIB_NUM_THREADS=10
PADDLE_OCR_USE_TENSORRT=false
PADDLE_OCR_USE_FP16=false
PADDLE_OCR_DET_DB_THRESH=0.3
PADDLE_OCR_DET_DB_BOX_THRESH=0.6
PADDLE_OCR_DET_DB_UN_CLIP_RATIO=1.6
PADDLE_OCR_MAX_BATCH_SIZE=10
PADDLE_OCR_USE_ZERO_COPY_RUN=false
PADDLE_OCR_USE_PDF2DOCX_API=false
PADDLE_OCR_USE_SPACE_CHAR=true
PADDLE_OCR_DROP_SCORE=0.5
PADDLE_OCR_DET_LIMIT_SIDE_NUM=960
PADDLE_OCR_DET_LIMIT_TYPE=max
PADDLE_OCR_REC_BATCH_NUM=6
PADDLE_OCR_USE_ANGLE_CLS=true
PADDLE_OCR_CLS_THRESH=0.9
PADDLE_OCR_USE_GREEDY_DECODER=false
PADDLE_OCR_VERSION=PP-OCRv5

# Supported Languages for PaddleOCR 3.1
SUPPORTED_LANGUAGES=["ch", "en", "french", "german", "korean", "japan"]
DEFAULT_LANGUAGE=korean

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_EXTENSIONS=[".jpg", ".jpeg", ".png", ".bmp", ".tiff"]

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development Settings
DEBUG=true 